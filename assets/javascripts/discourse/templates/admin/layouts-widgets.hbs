<div class="admin-title">
  <h3>{{i18n "admin.layouts.widgets.title"}}</h3>
  
  {{d-button
    action="addWidget"
    label="admin.layouts.widgets.add"
    icon="plus"}}
</div>

<div class="admin-container">
  {{#if widgets}}
    <table class='table layouts grid'>
      <thead>
        <th class="name">{{i18n 'admin.layouts.widgets.widget'}}</th>
        <th>{{i18n 'admin.layouts.widgets.position.label'}}</th>
        <th>{{i18n 'admin.layouts.widgets.order.label'}}</th>
        <th>{{i18n 'admin.layouts.widgets.groups.label'}}</th>
        <th>{{i18n 'admin.layouts.widgets.enabled'}}</th>
      </thead>

      <tbody>
        {{#each widgets as |widget|}}
          {{admin-widget-item
            widget=widget
            orderList=orderList
            positionList=positionList
            groupList=groupList
            removeWidget=(action 'removeWidget')}}      
        {{/each}}
      </tbody>
    </table>
  {{else}}
    {{#unless loading}}
      <div>{{i18n "admin.layouts.widgets.none"}}</div>
    {{/unless}}
  {{/if}}
</div>
