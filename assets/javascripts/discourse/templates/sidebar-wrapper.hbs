<div class="content-wrapper">
  {{#if leftSidebarEnabled}}
    <aside class="sidebar left {{leftClasses}}" style={{leftStyle}}>
      {{sidebar-container
        side="left"
        topic=model
        customSidebarProps=customSidebarProps
        category=category
        filter=filter
        context=mainContent}}
      
      {{plugin-outlet
        name="sidebar-left"
        args=(hash
          customSidebarProps=customSidebarProps
          category=category
          responsiveView=responsiveView
          path=path)}}
    </aside>
  {{/if}}
  
  <div class="main-content {{mainClasses}}" style={{mainStyle}}>
    {{partial mainContent}}
  </div>
  
  {{#if rightSidebarEnabled}}
    <aside class="sidebar right {{rightClasses}}" style={{rightStyle}}>
      {{sidebar-container
        side="right"
        topic=model
        customSidebarProps=customSidebarProps
        category=category
        filter=filter
        context=mainContent}}
      
      {{plugin-outlet
        name="sidebar-right"
        args=(hash 
          customSidebarProps=customSidebarProps
          category=category
          responsiveView=responsiveView
          path=path)}}
    </aside>
  {{/if}}
  
  {{#if showResponsiveMenu}}
    <div class="layouts-responsive-menu">
      {{#each responsiveMenuItems as |item|}}
        {{#d-button
          class=item.class
          action=item.action
          actionParam=item.actionParam
        }}
          {{item.icon}}
        {{/d-button}}
      {{/each}}
    </div>
    <div class="sidebar-cloak"></div>
  {{/if}}
</div>
